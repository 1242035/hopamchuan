<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <ImageView android:id="@+id/icon"
        android:layout_margin="@dimen/track_icon_padding"
        android:layout_width="@dimen/track_icon_size"
        android:layout_height="@dimen/track_icon_size"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_menu_search"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/example_text"
        android:textColor="#e7ecf0"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical" />

</LinearLayout><!-- From: file:/E:/AndroidApp/Hop%20Am%20Chuan%20Project/Hop%20Am%20Chuan/Hop%20Am%20Chuan/src/main/res/layout/list_item_navigation_drawer_1.xml -->
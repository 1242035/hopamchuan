<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hqt.hac.view"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="android.app.default_searchable"
            android:value="com.hqt.hac.view.SearchViewActivity" />

        <provider
            android:name="com.hqt.hac.provider.HopAmChuanProvider"
            android:authorities="com.hqt.hac.provider"
            android:exported="true"
            android:label="@string/app_name"
            android:syncable="true" />

        <activity
            android:name="com.hqt.hac.view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.hqt.hac.view.SearchViewActivity"
            android:label="@string/title_activity_search_view"
            android:launchMode="singleTop"
            android:parentActivityName="MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.TestParser"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.TestTextView"
            android:exported="true"
            android:label="@string/title_activity_test_text_view" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.TestSurfaceView"
            android:exported="true"
            android:label="@string/title_activity_test_text_view" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.TestDatabaseActivity"
            android:exported="true"
            android:label="@string/title_activity_test_database" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
                android:name="com.hqt.hac.view.test.MainActivityTest"
                android:label="@string/title_activity_test" >
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
        </activity>
    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hqt.hac.view"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".BunnyApplication"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="android.app.default_searchable"
            android:value="com.hqt.hac.view.SearchViewActivity" />

        <provider
            android:name="com.hqt.hac.provider.HopAmChuanProvider"
            android:authorities="com.hqt.hac.provider"
            android:exported="true"
            android:label="@string/app_name"
            android:syncable="true" />

        <provider android:name="com.hqt.hac.provider.SearchRecentProvider"
                  android:label="@string/app_name"
                  android:authorities="com.con.gau.tho" />

        <service android:name="com.hqt.hac.helper.service.Mp3PlayerService"
                 android:label="@string/app_name"/>
        <service android:name="com.hqt.hac.helper.service.SyncService"
                 android:label="@string/app_name"/>
        <service android:name="com.hqt.hac.helper.service.UpdateService"
                 android:label="@string/app_name"/>

        <receiver android:name="com.hqt.hac.helper.service.AlarmReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <activity
            android:name="com.hqt.hac.view.MainActivity"
            android:label="@string/app_name" >
            <meta-data
                    android:name="android.app.default_searchable"
                    android:value="com.hqt.hac.view.SearchViewActivity" />
        </activity>
        <activity
            android:name="com.hqt.hac.view.SearchViewActivity"
            android:label="@string/title_activity_search_view"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.TestParser"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.TestTextView"
            android:exported="true"
            android:label="@string/title_activity_test_text_view" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.TestSurfaceView"
            android:exported="true"
            android:label="@string/title_activity_test_text_view" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.TestDatabaseActivity"
            android:exported="true"
            android:label="@string/title_activity_test_database" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.test.MainActivityTest"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SplashTheme.FullScreen"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/FullscreenTheme"
            android:name="com.hqt.hac.view.LoginActivity"
            android:label="@string/login_activity_title" >
        </activity>
        <activity
            android:name="com.hqt.hac.view.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
                android:name="com.hqt.hac.view.SecondarySettingActivity"
                android:label="@string/title_activity_setting" >
        </activity>
        <activity
                android:name=".FullscreenSongActivity"
                android:label="Full Screen Activity">
        </activity>
    </application>

</manifest>
